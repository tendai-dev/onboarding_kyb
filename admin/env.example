NEXT_PUBLIC_GATEWAY_URL=http://localhost:8000
NEXT_PUBLIC_PROJECTIONS_API_BASE_URL=http://localhost:8090
NEXT_PUBLIC_MESSAGING_API_BASE_URL=http://localhost:8087
NEXT_PUBLIC_AUDIT_LOG_API_BASE_URL=http://localhost:8011
NEXT_PUBLIC_RISK_API_BASE_URL=http://localhost:8006
NEXT_PUBLIC_ENTITY_CONFIG_API_BASE_URL=http://localhost:8003

# Sentry Error Monitoring Configuration
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_RELEASE=
NEXT_PUBLIC_SENTRY_RELEASE=
# Set to "true" to enable Sentry in development
SENTRY_ENABLED=false
NEXT_PUBLIC_SENTRY_ENABLED=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
