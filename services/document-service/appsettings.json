{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ClamAv": {
    "Host": "clamav",
    "Port": 3310,
    "PingTimeoutMs": 5000,
    "ScanTimeoutMs": 60000
  },
  
  "DocumentQuality": {
    "MaxFileSizeBytes": 10485760,
    "MinimumQualityScore": 60,
    "EnableOcr": true,
    "TesseractDataPath": "/usr/share/tesseract-ocr/tessdata"
  },
  
  "Storage": {
    "Provider": "MinIO",
    "BucketName": "documents",
    "Endpoint": "minio:9000",
    "AccessKey": "${MINIO_ACCESS_KEY}",
    "SecretKey": "${MINIO_SECRET_KEY}",
    "UseSSL": false
  },
  
  "Database": {
    "ConnectionString": "${DATABASE_CONNECTION_STRING}"
  }
}

