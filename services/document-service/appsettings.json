{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=documents;Username=kyb;Password=kyb_password"
  },
  "Storage": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "UseSSL": false,
    "BucketName": "kyb-docs"
  },
  "ClamAv": {
    "Host": "localhost",
    "Port": 3310,
    "MaxFileSize": 52428800
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Publish": {
      "DocUploaded": "kyb.doc.uploaded.v1",
      "DocVerified": "kyb.doc.verified.v1"
    }
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/mukuru",
    "Audience": "kyb-document-api",
    "RequireHttpsMetadata": false
  },
  "DocumentSettings": {
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx", ".xls", ".xlsx"],
    "MaxFileSizeInMB": 50,
    "PresignedUrlExpiryMinutes": 30,
    "EnableVirusScan": true
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "kyb-document-api"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableSwagger": true
}