{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=notifications;Username=kyb;Password=kyb_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ConsumerGroup": "notification-service",
    "Subscribe": {
      "AllEvents": "kyb.*.*.v1"
    }
  },
  "SMTP": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "",
    "Password": "",
    "FromAddress": "noreply@kyb-platform.com",
    "FromName": "KYB Platform",
    "EnableSSL": true
  },
  "SMS": {
    "Provider": "Twilio",
    "AccountSid": "",
    "AuthToken": "",
    "FromNumber": ""
  },
  "NotificationSettings": {
    "EnableEmail": true,
    "EnableSMS": false,
    "EnablePush": false,
    "Templates": {
      "CaseSubmitted": {
        "Subject": "Application Submitted",
        "Template": "Your application {caseId} has been submitted successfully."
      },
      "CaseApproved": {
        "Subject": "Application Approved",
        "Template": "Congratulations! Your application {caseId} has been approved."
      },
      "CaseRejected": {
        "Subject": "Application Status Update",
        "Template": "Your application {caseId} requires additional information."
      },
      "TaskAssigned": {
        "Subject": "New Task Assignment",
        "Template": "You have been assigned a new task for case {caseId}."
      }
    }
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/mukuru",
    "Audience": "kyb-notification-api",
    "RequireHttpsMetadata": false
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "kyb-notification-api"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableSwagger": true
}