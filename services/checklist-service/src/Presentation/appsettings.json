{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=checklist;Username=postgres;Password=postgres",
    "PostgreSQL": "Host=localhost;Database=checklist;Username=postgres;Password=postgres"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/mukuru",
    "Audience": "kyb-checklist-api",
    "RequireHttpsMetadata": false
  },
  "ChecklistSettings": {
    "CacheExpirationMinutes": 30,
    "MaxItemsPerChecklist": 100
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "kyb-checklist-api"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableSwagger": true
}