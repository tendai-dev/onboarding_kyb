{
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5433;Database=kyb_case;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ProducerTopics": {
      "CaseSubmitted": "kyb.case.submitted.v1",
      "CaseUpdated": "kyb.case.updated.v1",
      "CaseApproved": "kyb.case.approved.v1",
      "CaseRejected": "kyb.case.rejected.v1"
    }
  },
  "Outbox": {
    "PollIntervalMs": 300,
    "MaxRetries": 3
  },
  "EntityConfig": {
    "BaseUrl": "http://localhost:8003"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/mukuru",
    "Audience": "kyb-case-api",
    "RequireHttpsMetadata": false
  },
  "Services": {
    "EntityConfiguration": {
      "BaseUrl": "http://localhost:8003"
    },
    "WorkQueue": {
      "BaseUrl": "http://localhost:8005"
    },
    "Risk": {
      "BaseUrl": "http://localhost:8006"
    },
    "Projections": {
      "BaseUrl": "http://localhost:8007"
    },
    "Document": {
      "BaseUrl": "http://localhost:8008"
    }
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "kyb-case-api"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableSwagger": true
}