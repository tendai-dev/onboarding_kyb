{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=projections;Username=kyb;Password=kyb_password",
    "PostgreSQL": "Host=localhost;Database=projections;Username=kyb;Password=kyb_password",
    "OnboardingDatabase": "Host=localhost;Database=kyb_case;Username=kyb;Password=kyb_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ConsumerGroup": "projections-service",
    "Subscribe": {
      "CaseEvents": "kyb.case.*.v1",
      "TaskEvents": "kyb.task.*.v1",
      "RiskEvents": "kyb.risk.*.v1",
      "DocEvents": "kyb.doc.*.v1"
    }
  },
  "Projections": {
    "RebuildOnStartup": false,
    "EnableRealTimeUpdates": true,
    "CacheExpirationMinutes": 5
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "kyb-projections-api"
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/master",
    "Audience": "account"
  },
  "AzureAd": {
    "TenantId": "dd5a90ad-b0ae-463b-bef5-5bae77f1adf2",
    "ClientId": "66879744-7f08-4acd-9a4d-b90da1ee0e59",
    "AdminGroupId": "your-azure-ad-admin-group-id"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableSwagger": true
}