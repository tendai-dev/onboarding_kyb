{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=risk;Username=kyb;Password=kyb_password",
    "PostgreSQL": "Host=localhost;Database=risk;Username=kyb;Password=kyb_password"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ConsumerGroup": "risk-service",
    "_comment": "No automatic event consumption - risk assessments are created manually",
    "Subscribe": {
      "_note": "No automatic subscriptions - all risk assessments are manual"
    },
    "Publish": {
      "RiskAssessed": "kyb.risk.assessed.v1"
    }
  },
  "Keycloak": {
    "Authority": "http://localhost:8080/realms/mukuru",
    "Audience": "kyb-risk-api",
    "RequireHttpsMetadata": false
  },
  "RiskEngine": {
    "_comment": "Risk engine configuration is disabled - all risk assessments are done manually by authorized personnel",
    "_note": "No automatic risk scoring, classification, or flagging is performed",
    "AutoAssessmentEnabled": false,
    "AutoScoringEnabled": false,
    "AutoClassificationEnabled": false
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "ServiceName": "kyb-risk-api"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnableSwagger": true
}