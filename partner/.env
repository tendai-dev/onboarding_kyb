# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-this-in-production

# Keycloak Authentication Configuration
KEYCLOAK_ISSUER=http://localhost:8080/realms/mukuru
KEYCLOAK_CLIENT_ID=kyb-connect-portal
KEYCLOAK_CLIENT_SECRET=
# Note: For public client (PKCE flow), client secret is not required

# API Gateway URL - All API calls go through the gateway
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8000

# API Base URLs (via gateway)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_ENTITY_CONFIG_API_URL=http://localhost:8000/api/entities
NEXT_PUBLIC_CASES_API_URL=http://localhost:8000/api/cases
NEXT_PUBLIC_DOCUMENTS_API_URL=http://localhost:8000/api/documents
NEXT_PUBLIC_PROJECTIONS_API_URL=http://localhost:8000/api/projections

# WebSocket for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Feature Flags
NEXT_PUBLIC_ENABLE_DOCUMENT_UPLOAD=true
NEXT_PUBLIC_ENABLE_RISK_ASSESSMENT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Tracing and Monitoring
NEXT_PUBLIC_TRACE_ENABLED=true
NEXT_PUBLIC_OTEL_ENDPOINT=http://localhost:4317

# MinIO Direct Access (for pre-signed URLs)
NEXT_PUBLIC_MINIO_ENDPOINT=http://localhost:9000
