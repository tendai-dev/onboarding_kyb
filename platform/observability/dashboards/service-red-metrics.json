{
  "dashboard": {
    "title": "Service RED Metrics (Rate, Errors, Duration)",
    "tags": ["generated", "red", "microservices"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=~\"kyc-.*\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"}
        ]
      },
      {
        "id": 2,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=~\"kyc-.*\",status=~\"5..\"}[5m])) by (service) / sum(rate(http_requests_total{service=~\"kyc-.*\"}[5m])) by (service) * 100",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error %", "max": 5}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Error Rate Alert"
        }
      },
      {
        "id": 3,
        "title": "Response Time P95 (ms)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=~\"business-.*\"}[5m])) by (service, le)) * 1000",
            "legendFormat": "{{service}} p95"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Duration"}
        ],
        "thresholds": [
          {"value": 500, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 4,
        "title": "Request Volume by Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"business-.*\"}[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(http_active_connections{namespace=~\"business-.*\"}) by (service)"
          }
        ]
      },
      {
        "id": 6,
        "title": "Request Queue Depth",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "sum(http_request_queue_depth{namespace=~\"business-.*\"}) by (service)"
          }
        ]
      },
      {
        "id": 7,
        "title": "Circuit Breaker Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "circuit_breaker_state{namespace=~\"business-.*\"}",
            "format": "table"
          }
        ]
      },
      {
        "id": 8,
        "title": "Outbox Events Pending",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(outbox_events_pending{namespace=~\"business-.*\"}) by (service)",
            "legendFormat": "{{service}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(db_connection_pool_active{namespace=~\"business-.*\"}) by (service)",
            "legendFormat": "{{service}} active"
          },
          {
            "expr": "sum(db_connection_pool_idle{namespace=~\"business-.*\"}) by (service)",
            "legendFormat": "{{service}} idle"
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  }
}

